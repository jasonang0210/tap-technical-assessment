{
  "compilerOptions": {
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"] // Optional: aligns with Vite alias
    },
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "module": "esnext",
    "jsx": "react-jsx"
  },
  "include": ["src"]
}